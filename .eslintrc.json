{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "Promise": true,
    "fetch": false
  },
  "rules": {
    "global-require": 0,
    "indent": [2, 2, { "SwitchCase": 1 }],
    "consistent-return": 0,
    "max-len": 0,
    "object-curly-newline": 0,
    "comma-dangle": 0,
    "camelcase": 0,
    "class-methods-use-this": 0,
    "no-unused-vars": 0,
    "no-else-return": 0,
    "no-tabs": 0,
    "no-console": 0,
    "no-warning-comments": [0, { "terms": ["todo", "fixme", "example"] }],
    "no-underscore-dangle": 0,
    "no-throw-literal": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": [2, { "ignore": ["bmcbypass"] }],
    "import/extensions": [2, { "js": "never" }],
    "import/prefer-default-export": 0,
    "no-param-reassign": 0
  }
}
